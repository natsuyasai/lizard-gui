{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts", 
    "src/types",
    "src/types/types.ts"
, "test/renderer/src/validator/fileNameValidator.spec.ts"  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@/*": ["./src/*"]
    }
  }
}
